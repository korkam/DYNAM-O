# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /apps/software/MATLAB/R2020b
startdir = /data/preraugp/code/labcode/multitaper/multitaper_spectrogram_mex

# Toolchain information
cc = /usr/bin/gcc
cxx = g++
linker = /usr/bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DHAVE_LAPACK_CONFIG_H -DLAPACK_COMPLEX_STRUCTURE -DMW_HAVE_LAPACK_DECLS -DMODEL=multitaper_spectrogram_coder_mex -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DHAVE_LAPACK_CONFIG_H -DLAPACK_COMPLEX_STRUCTURE -DMW_HAVE_LAPACK_DECLS -DMODEL=multitaper_spectrogram_coder_mex -c -fopenmp -DOMPLIBNAME="$matlabdir/sys/os/glnxa64/libiomp5.so" 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o multitaper_spectrogram_coder_mex.mexa64 -L"$matlabdir/bin/glnxa64" -lmwlapack -lmwblas -lemlrt -lcovrt -lut -lmwmathutil -fPIC -L"$matlabdir/sys/os/glnxa64" -liomp5 -Wl,--version-script,multitaper_spectrogram_coder_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/multitaper_spectrogram_coder_data.o : cc $root/multitaper_spectrogram_coder_data.c
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/multitaper_spectrogram_coder_initialize.o : cc $root/multitaper_spectrogram_coder_initialize.c
build $builddir/multitaper_spectrogram_coder_terminate.o : cc $root/multitaper_spectrogram_coder_terminate.c
build $builddir/multitaper_spectrogram_coder.o : cc $root/multitaper_spectrogram_coder.c
build $builddir/colon.o : cc $root/colon.c
build $builddir/eml_int_forloop_overflow_check.o : cc $root/eml_int_forloop_overflow_check.c
build $builddir/nextpow2.o : cc $root/nextpow2.c
build $builddir/combineVectorElements.o : cc $root/combineVectorElements.c
build $builddir/indexShapeCheck.o : cc $root/indexShapeCheck.c
build $builddir/all.o : cc $root/all.c
build $builddir/any.o : cc $root/any.c
build $builddir/detrend.o : cc $root/detrend.c
build $builddir/qr.o : cc $root/qr.c
build $builddir/warning.o : cc $root/warning.c
build $builddir/repmat.o : cc $root/repmat.c
build $builddir/fft.o : cc $root/fft.c
build $builddir/power.o : cc $root/power.c
build $builddir/eml_mtimes_helper.o : cc $root/eml_mtimes_helper.c
build $builddir/mtimes.o : cc $root/mtimes.c
build $builddir/mean.o : cc $root/mean.c
build $builddir/sum.o : cc $root/sum.c
build $builddir/find.o : cc $root/find.c
build $builddir/eml_setop.o : cc $root/eml_setop.c
build $builddir/issorted.o : cc $root/issorted.c
build $builddir/_coder_multitaper_spectrogram_coder_api.o : cc $root/interface/_coder_multitaper_spectrogram_coder_api.c
build $builddir/_coder_multitaper_spectrogram_coder_mex.o : cc $root/interface/_coder_multitaper_spectrogram_coder_mex.c
build $builddir/trisolve.o : cc $root/trisolve.c
build $builddir/multitaper_spectrogram_coder_emxutil.o : cc $root/multitaper_spectrogram_coder_emxutil.c
build $builddir/_coder_multitaper_spectrogram_coder_info.o : cc $root/interface/_coder_multitaper_spectrogram_coder_info.c
build $builddir/c_mexapi_version.o : cc $matlabdir/extern/version/c_mexapi_version.c

# Link
build $root/multitaper_spectrogram_coder_mex.mexa64 : link $builddir/multitaper_spectrogram_coder_data.o $builddir/rt_nonfinite.o $builddir/multitaper_spectrogram_coder_initialize.o $builddir/multitaper_spectrogram_coder_terminate.o $builddir/multitaper_spectrogram_coder.o $builddir/colon.o $builddir/eml_int_forloop_overflow_check.o $builddir/nextpow2.o $builddir/combineVectorElements.o $builddir/indexShapeCheck.o $builddir/all.o $builddir/any.o $builddir/detrend.o $builddir/qr.o $builddir/warning.o $builddir/repmat.o $builddir/fft.o $builddir/power.o $builddir/eml_mtimes_helper.o $builddir/mtimes.o $builddir/mean.o $builddir/sum.o $builddir/find.o $builddir/eml_setop.o $builddir/issorted.o $builddir/_coder_multitaper_spectrogram_coder_api.o $builddir/_coder_multitaper_spectrogram_coder_mex.o $builddir/trisolve.o $builddir/multitaper_spectrogram_coder_emxutil.o $builddir/_coder_multitaper_spectrogram_coder_info.o $builddir/c_mexapi_version.o 
